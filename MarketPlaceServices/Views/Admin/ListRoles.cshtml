@model IEnumerable<Role>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Roles</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "CreateEdit", "Admin", new { type = "Roles" }, new { @class = "btn" })
    </p>
    <table class="table">
        <thead>
            <tr class="title">
                <th>Название</th>
                <th class="text-center">Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td> @Html.ActionLink(item.RoleName, "CreateEdit", "Admin", new { Id = item.RoleId, type = "Roles" })</td>
                <td class="text-center">
                    @Html.ActionLink("Remove", "Remove", "Admin", new { Id = item.RoleId, type = item.GetType().BaseType.Name })
                </td>
            </tr>
            }
        </tbody>
    </table>
</body>
</html>
