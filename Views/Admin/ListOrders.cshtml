@model IEnumerable<Order>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Orders</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "CreateEdit", new {type ="Orders" }, new { @class = "btn" })
    </p>
    <table class="table">
        <thead>
            <tr class="title">
                <th>Название</th>
                <th class="text-center">Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>

                <td> @Html.ActionLink(item.Comment, "CreateEdit", new { Id = item.OrderId, type = item.GetType().BaseType.Name })</td>
                <td class="text-center">
                    @Html.ActionLink("Remove", "Remove", new { Id = item.OrderId, type = item.GetType().BaseType.Name })
                </td>
            </tr>
            }
        </tbody>
    </table>
</body>
</html>
